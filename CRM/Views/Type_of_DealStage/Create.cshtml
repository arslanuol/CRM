
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/View.cshtml";
}





<link href="~/Content/Modal.css" rel="stylesheet" />




<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">CRM</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Deal Stage</a></li>
                    <li class="breadcrumb-item active">Deal Stage</li>
                </ol>
            </div>
            <h4 class="page-title">Deal Stage</h4>
        </div>
    </div>
</div>







<div class="text-center">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-xl-12 mt-xl-12 mt-12">
                    <div class="button-list">
                        @*<a href="/TypesofLeadStatus/CreateTypeofLeadStatus">*@
                        <button type="button" class="btn btn-danger waves-effect waves-light" data-toggle="modal" data-target="#myModal2" style="font-size:14px; float:right"><i class="fa fa-plus" aria-hidden="true" style="font-size:14px;"></i> Create deal stage</button>
                        <input type="hidden" class="form-control" name="company_id" id="company_id" value="@Session["Company_id"]" required="">
                        @*</a>*@
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->
        </div> <!-- end col -->
    </div>
</div>






<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="header-title"></h4>

                <table id="scroll-vertical-datatable tb" class="table dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Deal Srage</th>
                            <th>Created By</th>
                            <th>Last Activity</th>
                            <th class="col-md-2">Action</th>
                        </tr>
                    </thead>


                    <tbody id="tbllist">
                    </tbody>
                </table>

            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>






<!-- Modal -->
<div class="modal right fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <div class="col-md-12">
                    <div class="row">
                        <h4 style="color:white">Create Deal Stage</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="text-align:right;font-size:28px;"><span aria-hidden="true">&times;</span></button>
                    </div>
                </div>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-warning d-none fade show">
                            <h4 class="mt-0">Oh snap!</h4>
                            <p class="mb-0">This form seems to be invalid :(</p>
                        </div>
                        <br /><br /><br /><br />

                        <div class="alert alert-info d-none fade show">
                            <h4 class="mt-0">Yay!</h4>
                            <p class="mb-0">Everything seems to be ok :)</p>
                        </div>

                        <form id="demo-form" data-parsley-validate="">
                            <div class="form-group">
                                <label for="Deal_Stage_name">Type</label>
                                <input type="text" class="form-control" name="Deal_Stage_name" id="Deal_Stage_name" required="">
                            </div>


                            <div class="form-group">
                                <input type="hidden" s class="form-control" name="Deal_Stage_Type_id" id="Deal_Stage_Type_id" required="">
                                <input type="hidden" class="form-control" name="Company_id" id="Company_id" value="@Session["Company_id"]" required="">
                                <input type="hidden" class="form-control" name="User_id" id="User_id" value="@Session["User_id"]" required="">
                                <input type="hidden" class="form-control hidden" name="Create_date" id="Create_date" value="@DateTime.Now" required="">
                            </div>
                            <div class="form-group">
                                <span id="Successmsg"></span>
                            </div>
                        </form>

                    </div> <!-- end col-->
                </div>
            </div>
            <div class="modal-footer">


                <button type="button" id="btnSave" class="btn btn-success" onclick="Add()" style="float:left;font-weight:bold;font-family:Arial">Create</button>
                <button type="button" id="btnUpdate" class="btn btn-success" onclick="Update()" style="float:left;font-weight:bold;font-family:Arial">Update</button>
                <button type="button" id="btnAnother" class="btn btn-outline-success" onclick="CreateandAnother()" style="float:left;font-weight:bold;font-family:Arial">Create and Add another</button>
                <button type="button" id="btnCancel" class="btn btn-danger" onclick="Cancel()" style="float:left;font-weight:bold;font-family:Arial">Cancel</button>


            </div>

        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div><!-- modal -->













<br />


<!-- end row-->


