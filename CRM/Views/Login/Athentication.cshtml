
@{
    ViewBag.Title = "Athentication";
   
}




<div class="account-pages mt-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card">

                    <div class="card-body p-4">

                        <div class="text-center w-75 m-auto">
                            <a href="index.html">
                                <span>
                                    <img src="~/Content/theme/images/logo-dark.png" alt="" height="26">
                                </span>
                            </a>
                            <p class="text-muted mb-4 mt-3">Enter your email address and password to access admin panel.</p>
                        </div>

                        <h5 class="auth-title">Sign In</h5>

                        <form method="post" action="/Login/Athentication/">
                            <fieldset>
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)

                                <div class="form-group mb-3">
                                    <label for="emailaddress">Email address</label>
                                    <input class="form-control" type="email" id="email" name="email" required="" placeholder="Enter your email">
                                </div>

                                <div class="form-group mb-3">
                                    <label for="password">Password</label>
                                    <input class="form-control" type="password" required="" id="password" name="password" placeholder="Enter your password">
                                </div>

                                <div class="form-group mb-3">
                                    <div class="custom-control custom-checkbox checkbox-info">
                                        <input type="checkbox" class="custom-control-input" id="checkbox-signin">
                                        <label class="custom-control-label" for="checkbox-signin">Remember me</label>
                                    </div>
                                </div>
                                @if (@ViewBag.Message != null)
                                {
                                    <div style="color:red">
                                        @ViewBag.Message
                                        

                                    </div>
                                }

                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-danger btn-block" type="submit" id="btnSave" onclick="">Log In</button>
                                </div>

                            </fieldset>
                           

                        </form>

                        @*<div class="text-center">
                            <h5 class="mt-3 text-muted">Sign in with</h5>
                            <ul class="social-list list-inline mt-3 mb-0">
                                <li class="list-inline-item">
                                    <a href="javascript: void(0);" class="social-list-item border-primary text-primary"><i class="mdi mdi-facebook"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="javascript: void(0);" class="social-list-item border-danger text-danger"><i class="mdi mdi-google"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="javascript: void(0);" class="social-list-item border-info text-info"><i class="mdi mdi-twitter"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="javascript: void(0);" class="social-list-item border-secondary text-secondary"><i class="mdi mdi-github-circle"></i></a>
                                </li>
                            </ul>
                        </div>*@

                    </div> <!-- end card-body -->
                </div>
                <!-- end card -->

                <div class="row mt-3">
                    <div class="col-12 text-center">
                        @*<p> <a href="/ForgotPassword/PasswordRecover/" class="text-muted ml-1">Forgot your password?</a></p>*@
                        <p class="text-muted">Don't have an account? <a href="/Signup/Register/" class="text-muted ml-1"><b class="font-weight-semibold">Sign Up</b></a></p>
                        <p class="text-muted"><a href="/Home/Index/" class="text-muted ml-1"><b class="font-weight-semibold"><i class="fa fa-reply" aria-hidden="true"></i>Back</b></a></p>
                    </div> <!-- end col -->
                </div>
                <!-- end row -->

            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>


<script type="text/javascript">
    $('#login').click(function () {
        document.location = '@Url.Action("Index","Index")';
    });
</script>
